[module/system-uptime-pretty]
type = custom/script
exec = echo "%{F#99}(`uptime --pretty | sed 's/up //' | sed 's/\ years\?,/y/' | sed 's/\ weeks\?,/w/' | sed 's/\ days\?,/d/' | sed 's/\ hours\?,\?/h/' | sed 's/\ minutes\?/m/'`)%{F-}"
interval = 30

